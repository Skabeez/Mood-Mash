# Environment configuration for Mood Mash

# =============================================================================
# API KEYS (Get your keys from the respective platforms)
# =============================================================================

# Groq AI API Key (Free tier available)
# Get your key from: https://console.groq.com/
EXPO_PUBLIC_GROQ_API_KEY=your_groq_api_key_here

# Last.fm API Credentials
# Get your keys from: https://www.last.fm/api/account/create
EXPO_PUBLIC_LASTFM_API_KEY=your_lastfm_api_key_here
EXPO_PUBLIC_LASTFM_SHARED_SECRET=your_lastfm_shared_secret_here

# YouTube Data API v3
# Get your key from: https://console.cloud.google.com/
EXPO_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here

# Supabase Configuration
# Get your credentials from: https://supabase.com/dashboard
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Debug Mode
DEBUG=true

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
